    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.2",
    "jest": "27.4.7",
    "lint-staged": "12.1.7",
    "prettier": "^2.3.2",
    "supertest": "6.2.1",
    "ts-jest": "27.1.2",
    "ts-loader": "9.2.6",
