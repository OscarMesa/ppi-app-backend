  "engines": {
    "npm": "PLEASE USE YARN",
    "yarn": ">= 1.22.10",
    "node": ">=18.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests --maxWorkers=1",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:cov": "jest --coverage --maxWorkers=1",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ormconfig.ts",
    "migrations:generate": "npm run typeorm -- migration:generate -n",
    "migration:create": "yarn typeorm migration:create --dir ./src/database -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "yarn typeorm migration:revert",
    "schema:drop": "yarn typeorm schema:drop",
    "schema:sync": "yarn typeorm schema:sync",
    "seed:run": "npx ts-node ./src/database/seeds",
    "commitlint": "npx --no -- commitlint --edit \"$1\""
  },
  "dependencies": {
    "@aginix/nestjs-firebase-admin": "^2.2.0",
    "@faker-js/faker": "^7.6.0",
    "@google-cloud/logging": "9.8.0",
